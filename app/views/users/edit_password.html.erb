<div class="colorful gray">
  <div class="content">
    <h2>Change Password</h2>
    <% unless is_admin %>
        <p style="font-size:17px;">Username:&nbsp;<%= @user.username %></p>
        <%= hidden_field_tag(:username, @user.username) %>
    <% end %>

    <%= form_tag("/users/update_password", :method => "post", :name => "user") do %>

        <%= hidden_field_tag(:user_id, @user.id) %>
        <div>Current Password</div>
        <div><%= text_field_tag :current, '', :autocomplete => false %></div>

        <div>New Password</div>
        <div><%= password_field_tag :password_new, '', :id => "new_password_field" %>&nbsp;<span id="pw_helper"></span>
        </div>

        <div>Confirm New Password</div>
        <div><%= password_field_tag :password_confirmation, '', :id => "new_password_confirm_field" %>&nbsp;<span id="confirm_pw_helper"></span>
        </div>
        <p>
          <%= submit_tag "Change Password", :name => "user", :id => "user_submit", :class => 'btn success' %>
          <%= cancel_link(is_admin ? edit_user_path(@user.id) : root_url) %>
        </p>

    <% end %>
  </div>
</div>