<%= form_tag log_in_url do %>
<p>
  <%= label_tag :username %><br />
  <%= text_field_tag :username, params[:username], :autofocus => true %>
</p>
<p>
  <%= label_tag :password %><br />
  <%= password_field_tag :password %>
</p>
<p class="buttons">
  <%= submit_tag "Log in", :class => 'btn info' %>
</p>
<% end %>
